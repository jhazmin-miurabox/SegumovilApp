    <!--Shape-->
    <!--ShapeableImageView-->
    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--Button-->
    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonMainAction" parent="ButtonMain">
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_width">@dimen/home_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="iconTint">@drawable/state_icon_tertiary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMenu.Alert">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="ButtonMenu.Action">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
    <style name="ButtonMenu.Action.Main">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--TextField-->
    <style name="TextFieldDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="EditTextForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextItemCap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/common_padding_default</item>
        <item name="android:drawablePadding">@dimen/common_padding_min</item>
    </style>

    <style name="TextItemSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="TextItemBodyWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>
    <style name="TextItemBody" parent="TextItemBodyWrap">
        <!--<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>-->
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextItemBody.Strong">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextItemBody.TwoLines">
        <item name="android:maxLines">2</item>
    </style>
    <style name="TextItemBody.TwoLines.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/common_padding_min</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearDetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/common_padding_min</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardDetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/common_padding_min</item>
    </style>

    <!--Spinner-->
    <style name="SpinnerDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
    </style>
    <style name="SpinnerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
    </style>

    <!--Picker-->
    <style name="DatePickerDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_padding_min</item>
    </style>
    <style name="DatePickerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
    </style>

</resources>