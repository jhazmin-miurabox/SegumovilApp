<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".contactModule.view.ContactFragment">

    <data>
        <variable
            name="viewModel"
            type="com.cursosant.insurance.contactModule.viewModel.ContactViewModel" />
        <variable
            name="address"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_broken_image"
                android:scaleType="centerCrop"
                android:importantForAccessibility="no"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="4:3"/>
            <!--<androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="4:3"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/imgMap"
                app:layout_constraintBottom_toBottomOf="parent">

                <include layout="@layout/content_field_contact"
                    app:subtitle="@{@string/contact_offices}"
                    app:description="@{address}"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/common_padding_large_xx">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        android:hint="@string/hint_name"
                        app:clearError="@{true}"
                        style="@style/TextFieldDense">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:inputType="textPersonName|textCapWords"
                            android:nextFocusForward="@id/etEmail"
                            style="@style/EditTextForm"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:hint="@string/hint_email"
                        app:clearError="@{true}"
                        style="@style/TextFieldDense">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:inputType="textEmailAddress"
                            android:nextFocusForward="@id/etMsg"
                            style="@style/EditTextForm"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilMsg"
                        android:hint="@string/hint_msg"
                        app:clearError="@{true}"
                        style="@style/TextFieldDense">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMsg"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="5"
                            android:gravity="top|start"
                            style="@style/EditTextForm"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSend"
                        android:text="@string/contact_btn_send"
                        app:icon="@drawable/ic_send"
                        app:iconGravity="textStart"
                        style="@style/ButtonMain"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>