<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="notification"
            type="com.cursosant.insurance.common.entities.Notification" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_padding_min"
        android:layout_marginTop="@dimen/common_padding_min">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/item_policy_img_size"
                android:layout_height="@dimen/item_policy_img_size"
                android:src="@drawable/ic_broken_image"
                android:layout_marginEnd="@dimen/common_padding_micro"
                glideUrl="@{notification.imgUrl}"/>
            <include
                layout="@layout/content_field_notification"
                app:subtitle="@{notification.title}"
                app:description="@{notification.description}"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>